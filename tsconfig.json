{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2017",
    "allowJs": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "incremental": true
  },
  "include": ["src/**/*.ts", "src/types/*.d.ts"]
}
